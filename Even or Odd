#include <iostream>
using namespace std;

void evenorodd(int num) 
{
    if (num % 2 == 0 )
    {
        cout << num << " is " << " even "  << endl;

    }
    else
    {
        cout << num << " is " << " odd " << endl;
    }
}

int main() 
{
    int num = 0;
    cout << "Enter a number: ";
    cin >> num;
    evenorodd(num);
    return 0;
}
